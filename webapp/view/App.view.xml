<mvc:View
	controllerName="sap.ui.core.tutorial.odatav4.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
		<App id="_IDGenApp1" busy="{appView>/busy}" class="sapUiSizeCompact">
			<pages>
				<Page id="_IDGenPage1" title="{i18n>peoplePageTitle}">
					<content>
						<Table
							id="peopleList"
							growing="true"
							growingThreshold="10"
							items="{
								path: '/People',
								parameters: {
									$count: true
								}                                
							}">
			<headerToolbar>
				<OverflowToolbar id="_IDGenOverflowToolbar1">
					<content>
						<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                        <SearchField
                            id="searchField"
                            width="20%"
                            placeholder="{i18n>searchFieldPlaceholder}"
                            search=".onSearch"/>                        
						<Button
							id="refreshUsersButton"
							icon="sap-icon://refresh"
							tooltip="{i18n>refreshButtonText}"
							press=".onRefresh"/>
                        <Button
                            id="sortUsersButton"
                            icon="sap-icon://sort"
                            tooltip="{i18n>sortButtonText}"
                            press="onSort"/>                            
						</content>
					</OverflowToolbar>
				</headerToolbar>                            
							<columns>
								<Column id="userNameColumn">
									<Text id="_IDGenText1" text="{i18n>userNameLabelText}"/>
								</Column>
								<Column id="firstNameColumn">
									<Text id="_IDGenText2" text="{i18n>firstNameLabelText}"/>
								</Column>
								<Column id="lastNameColumn">
									<Text id="_IDGenText3" text="{i18n>lastNameLabelText}"/>
								</Column>
								<Column id="ageColumn">
									<Text id="_IDGenText4" text="{i18n>ageLabelText}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem id="_IDGenColumnListItem1">
									<cells>
										<Input id="_IDGenInput1" value="{UserName}"/>
									</cells>
									<cells>
										<Input id="_IDGenInput2" value="{FirstName}"/>
									</cells>
									<cells>
										<Input id="_IDGenInput3" value="{LastName}"/>
									</cells>
									<cells>
										<Input id="_IDGenInput4" value="{Age}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</Page>
			</pages>
		</App>
</mvc:View>